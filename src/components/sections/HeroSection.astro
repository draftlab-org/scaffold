---
import type { ImageMetadata } from 'astro';
import Hero from '@components/organisms/Hero.astro';

export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: ImageMetadata;
  class?: string;
}

const { title, subtitle, backgroundImage, class: className = '' } = Astro.props;
---

<Hero
	title={title}
	subtitle={subtitle}
	size="default"
	background="white"
	class={className}
>
	{backgroundImage && <slot />}
</Hero>
