---
import highlight from '@assets/highlight.png'
import Hero from '@components/organisms/Hero.astro';
import SectionLayout from '@layouts/SectionLayout.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: ImageMetadata;
  class?: string;
	sectionLabel?: string
}

const { title, subtitle, backgroundImage, class: className = '', sectionLabel } = Astro.props;
---

<SectionLayout bgImage={backgroundImage} sectionLabel={sectionLabel}>
	<Hero
		title={title}
		subtitle={subtitle}
		size="default"
		background="white"
		class={className}
	>
		<slot />
	</Hero>
</SectionLayout>
