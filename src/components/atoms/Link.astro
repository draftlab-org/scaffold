---
export interface Props {
  href: string;
  variant?: 'default' | 'nav' | 'footer' | 'unstyled';
  external?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  href,
  variant = 'default',
  external = false,
  class: className = '',
  ...props
} = Astro.props;

const variants = {
  default: 'text-blue-600 hover:text-blue-800 underline underline-offset-2 transition-colors',
  nav: 'text-gray-700 hover:text-gray-900 font-medium transition-colors',
  footer: 'text-gray-500 hover:text-gray-700 text-sm transition-colors',
  unstyled: '',
};

const classes = `${variants[variant]} ${className}`;
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<a href={href} class={classes} {...externalProps} {...props}>
  <slot />
</a>
