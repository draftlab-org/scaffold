---
export interface Props {
  href: string;
  variant?: 'default' | 'nav' | 'footer' | 'unstyled';
  external?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  href,
  variant = 'default',
  external = false,
  class: className = '',
  ...props
} = Astro.props;

const variants = {
  default: 'link-default',
  nav: 'justify-start text-color-primary-950 text-xl',
  footer: 'text-gray-500 hover:text-gray-700 text-sm transition-colors',
  unstyled: '',
};

const classes = `${variants[variant]} ${className}`;
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<a data-component href={href} class={classes} {...externalProps} {...props}>
	<slot />
</a>
