---
import Link from '@components/atoms/Link.astro';

export type Props = {
  href: string;
  active?: boolean;
  label: string;
  class?: string;
}

const {
  href,
  active = false,
  label,
  class: className = '',
} = Astro.props;

const activeStyles = active
  ? 'underline underline-offset-8 decoration-primary-300 decoration-dotted decoration-4'
  : '';

const classes = `inline-flex items-center px-3 py-2 transition-colors ${activeStyles} ${className}`;
---

<Link href={href} variant="nav" class={classes}>
	{label}
	<slot />
</Link>
